{
  "name": "bazel-code",
	"displayName": "Bazel",
	"description": "Bazel support for Visual Studio Code.",
  "version": "0.1.0",
  "publisher": "Devon Carew",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:bazel"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "bazel",
        "extensions": [
          "BUILD",
          "WORKSPACE"
        ],
        "configuration": "./syntax/bazel-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bazel",
        "scopeName": "source.bazel",
        "path": "./syntax/MagicPython.tmLanguage.json"
      },
      {
        "scopeName": "source.regexp.python",
        "path": "./syntax/MagicRegExp.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}